ul
    margin 0
    padding 0
    list-style none

.burger-menu
    width 40px
    height 40px
    border-radius 50%
    background-color rgba(0, 0, 0, .8)
    line-height 40px
    text-align center
    position fixed
    z-index 4
    left 5px
    top 5px
    color white
    display none
    @media only screen and (max-width: 600px)
        display block

.navBar
    display flex
    color white
    justify-content space-between
    height 90px
    position absolute
    z-index 1
    width inherit
    padding-left 8%

    @media only screen and (max-width: 600px)
        display block
        height auto

.menu
    height inherit
    @media only screen and (max-width: 600px)
        position fixed
        background-color rgba(0, 0, 0, .8)
        top 0
        left -100vw
        width 100vw
        transition .3s

.menu.is-active
    left 0

.navBar a
    height inherit 
    display flex
    color white
    text-decoration none
    align-items center
    padding: 0 10px
    @media only screen and (max-width: 600px)
        justify-content center
        height 40px
        font-size 2em

.navBar ul
    height inherit 
    display flex
    @media only screen and (max-width: 600px)
        height auto
        display block

.navBar ul li
    height inherit
    font-weight 300
    font-size 16px
    @media only screen and (max-width: 600px)
        height 50px
        text-align center

.navBar ul li svg
    height inherit
    align-items center
    @media only screen and (max-width: 600px)
        text-align center

.logo
    height inherit

.logo h1
    display flex
    height inherit 
    align-items center
    @media only screen and (max-width: 600px)
        align-items center
    